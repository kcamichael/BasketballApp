@model IEnumerable<BasketballApp.Models.CollegeModels.CollegeListItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Colleges</h1>

<p>
    <a class="college-createnew" asp-action="Create">Add College</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Conference
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conference)
            </td>
            <td>
                <a asp-route-ID="@item.ID" asp-action="Edit" class="btn btn-warning">Edit</a>
                <a asp-route-ID="@item.ID" asp-action="Detail" class="btn btn-info">Details</a>
                <a asp-route-ID="@item.ID" asp-action="Delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
