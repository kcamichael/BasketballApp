@model IEnumerable<BasketballApp.Models.CoachModels.CoachListItem>

@{
    ViewData["Title"] = "Coach";
}

<h1 class="tables-title">Coaches</h1>

<p>
    <a class="coach-createnew" asp-action="Create">Add Coach</a>
</p>
<table class="table table-hover table-border border-info  table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                College
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollegeName)
            </td>
            <td>
                <a asp-route-id="@item.ID" asp-action="Edit" class="btn btn-warning">Edit</a>
                <a asp-route-id="@item.ID" asp-action="Detail" class="btn btn-info">Details</a>
                <a asp-route-id="@item.ID" asp-action="Delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
